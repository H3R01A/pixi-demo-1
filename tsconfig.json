{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES6",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "webpack-env"
    ]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*"]
}